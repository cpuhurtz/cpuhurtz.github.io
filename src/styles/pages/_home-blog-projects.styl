.home, .blog, .projects
    margin-top 125px

    .home__sections
        border-top 1px solid epsilon
        margin-top 30px
        padding-top 40px
        position relative

        &:before
            display block
            content " "
            width 7px
            height 7px
            border epsilon 1px solid
            position absolute
            top -5px
            left 50%
            margin-left -5px
            background #FFF
            box-shadow #FFF 0 0 0 5px
            border-radius 3px

        .home__sections-single
            display block
            width 95%
            margin 0 auto

            &:hover h3
                color delta

            &:hover aside
                color alpha

            a
                width 100%
                height 100%
                display block
                padding 20px 0
                text-decoration none

            h3
                margin 0
                width 75%
                font-weight 500
                transition all ease-in-out .2s

            aside
                position relative
                top 2px
                margin 0
                width 25%
                float right
                font-weight 300
                color gama
                text-align right
                transition all ease-in-out .2s

.projects
    .home__sections-single
        h3
            display inline

        .emoji
            display inline
            position relative
            top -4px
            margin-right 10px
